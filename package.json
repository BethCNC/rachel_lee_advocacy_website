{
  "name": "rachel_lee_patient_advocacy_website",
  "version": "1.0.0",
  "description": "A comprehensive WordPress-based website for Rachel Lee's patient advocacy services",
  "private": true,
  "scripts": {
    "dev": "webpack --mode development --watch",
    "build": "webpack --mode production",
    "build:production": "webpack --mode production --env production",
    "test": "jest",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:a11y": "jest --testPathPattern=tests/accessibility",
    "test:performance": "lighthouse",
    "test:visual": "jest --testPathPattern=tests/visual",
    "lint": "eslint src/**/*.{ts,tsx}",
    "lint:fix": "eslint src/**/*.{ts,tsx} --fix",
    "type-check": "tsc --noEmit",
    "pre-deploy": "npm run type-check && npm run test && npm run build:production"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.22.0",
    "@wordpress/api-fetch": "^6.48.0",
    "@wordpress/blocks": "^12.28.0",
    "@wordpress/components": "^27.0.0",
    "@wordpress/element": "^5.28.0",
    "axios": "^1.6.7",
    "formik": "^2.4.5",
    "yup": "^1.3.3",
    "date-fns": "^3.3.1",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.17",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "typescript": "^5.3.3",
    "webpack": "^5.90.1",
    "webpack-cli": "^5.1.4",
    "ts-loader": "^9.5.1",
    "css-loader": "^6.10.0",
    "sass-loader": "^14.1.0",
    "style-loader": "^3.3.4",
    "sass": "^1.70.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/jest-dom": "^6.4.2",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "lighthouse": "^11.4.0",
    "prettier": "^3.2.5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
